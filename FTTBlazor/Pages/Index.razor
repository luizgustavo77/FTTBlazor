@page "/"

@inject ToastService toastService

@code{
    public bool dialogIsOpen { get; set; } = false;

}

<h1>Hello, world!</h1>

Welcome to your new app.

<button @onclick="@(e => { dialogIsOpen = true; })">oi</button>

<button class="btn btn-info" @onclick="@(() => toastService.ShowToast("Mensagem de INFO", ToastEnum.Info))">Info Toast</button>
<button class="btn btn-success" @onclick="@(() => toastService.ShowToast("Mensagem de SUCESSO", ToastEnum.Success))">Success Toast</button>
<button class="btn btn-warning" @onclick="@(() => toastService.ShowToast("Mensagem de ALERTA", ToastEnum.Warning))">Warning Toast</button>
<button class="btn btn-danger" @onclick="@(() => toastService.ShowToast("Mensagem de ERRO", ToastEnum.Error))">Error Toast</button>

<FTTBlazor.Dialog @bind-IsOpen="@dialogIsOpen">
    <FTTBlazor.DialogTitle>Hi</FTTBlazor.DialogTitle>
    <FTTBlazor.DialogContent>
        <p>What's your favorite animal?</p>

    </FTTBlazor.DialogContent>
    <FTTBlazor.DialogActions>

    </FTTBlazor.DialogActions>
</FTTBlazor.Dialog>