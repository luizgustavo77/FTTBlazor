@namespace FTTBlazor.Components.Dialog
@inherits FTTDialogComponent

<div class="@ClassMapper.AsString()"
     style="@StyleMapper.AsString()"
     @ref="Ref"
     @attributes="Attributes"
     Id="@Id"
     role="alertdialog"
     aria-modal="true"
     aria-labelledby="ftt-blazor-dialog-title"
     aria-describedby="ftt-blazor-dialog-content">
    <div class="ftt-blazor-dialog__container">
        <div class="@SurfaceClassMapper.AsString()" style="@SurfaceStyleMapper.AsString()">
            @ChildContent
        </div>
    </div>
    <div class="ftt-blazor-dialog__scrim"></div>
</div>