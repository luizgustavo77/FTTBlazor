@namespace FTTBlazor

<div class="mdl-cell--@Size-col ftt-blazor-align-left">

    @if (!string.IsNullOrEmpty(_id))
    {
        <div class="ftt-blazor-components ftt-blazor-input ftt-blazor-has-float-label">
            <input type="date" id="@_id" disabled="@_IsReadOnly" style="@StyleReadOnly padding-left: 0.3rem; padding-bottom: 0.06rem;" @attributes="@attributes" class="@BorderRightCssClass" @oninput="@(e => { TryGet(e); })" autocomplete="@_id" />
        </div>
    }

</div>