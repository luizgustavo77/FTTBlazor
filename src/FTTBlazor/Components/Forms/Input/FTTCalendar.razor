<div class="mdl-cell--@Size-col ftt-blazor-align-left">

    @if (!string.IsNullOrEmpty(_id))
    {
        <div class="ftt-blazor-components ftt-blazor-input ftt-blazor-has-float-label">
            <input type="date" id="@_id" disabled="@_IsReadOnly" style="@StyleReadOnly" @attributes="@attributes" class="@BorderRightCssClass" value="@Value" @onchange="@(e=> { ValueChanged.InvokeAsync((DateTime)e.Value); })" autocomplete="@_id" />
        </div>
    }

</div>